# flex-db Python Backend - Environment Variables Example
# Copy this file to .env.local and update with your local values
# .env.local is git-ignored and will be used when running locally

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=dbaas
DB_SSL_MODE=disable

# Server Configuration
JSONRPC_HOST=0.0.0.0
JSONRPC_PORT=5000

# API Metadata (for OpenAPI documentation)
API_TITLE=flex-db API
API_DESCRIPTION=Database-as-a-Service with JSON-RPC and REST API
API_VERSION=1.0.0

# Development Options
RELOAD=false
